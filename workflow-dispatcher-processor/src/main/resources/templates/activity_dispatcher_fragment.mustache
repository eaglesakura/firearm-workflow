    dispatcher.arguments = bundleOf(
        {{#savedStateList}}
            "{{name}}" to {{name}},
        {{/savedStateList}}
    )
    InternalWorkflowUtils.add(this, dispatcher, "{{className}}")

    dispatcher.startActivityForResult(
