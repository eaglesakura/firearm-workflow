internal fun {{callbackClassName}}.{{entryPointFunctionName}}(
    intent: Intent,
{{#savedStateList}}
    {{name}}: {{typeName}}{{#nullable}}?{{/nullable}},
{{/savedStateList}}
    options: Bundle? = null,
) {
